@using Newtonsoft.Json.Linq
@using System.Reflection.Metadata
@model Newtonsoft.Json.Linq.JObject
@{
    ViewData["Title"] = "Interface";
    JObject news = Model;
}
<div class = "pt-2 row text-center">
    <a href="@Url.Action("Index", "Weather")" class="col-4 display-6 main-link">Weather</a>
    <h2 class="col-4 display-4">News</h2>
    <a href="@Url.Action("Index", "Home")" class="col-4 display-6 main-link">Light Control</a>
</div>
<div class="mt-5" style="height: 80vh;">
    @{
        //for loop through the news
        for (var i = 0; i < 4; ++i)
        {
            <a class = "invisilink mb-2" href="@news["articles"][i]["url"]">
                <div class="newscard mb-3">
                    <div class="titlepart">
                        <p>@news["articles"][i]["title"]</p></div>
                    <div class="cardauthor">
                        <p>@news["articles"][i]["source"]["name"]</p></div>
                </div>
                </a>
        }
    }

</div>

